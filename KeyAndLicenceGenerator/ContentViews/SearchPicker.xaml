<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyAndLicenceGenerator.ContentViews.SearchPicker"
             xmlns:vm="clr-namespace:KeyAndLicenceGenerator.ViewModels">

    <ContentView.BindingContext>
        <vm:SearchPickerViewModel />
    </ContentView.BindingContext>
    <ContentView.Resources>
        <Style x:Key="BorderlessEntry"
               TargetType="Entry">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BackgroundColor"
                    Value="Red" />
            <!-- Add other style settings if necessary -->
        </Style>
    </ContentView.Resources>
    <VerticalStackLayout>
        <Entry x:Name="filterEntry"
               Text="{Binding EntryText, Mode=OneWay}"
               Style="{StaticResource BorderlessEntry}">
        </Entry>

        <Picker x:Name="itemsPicker"
                ItemsSource="{Binding PickerItems}"
                SelectedIndex="{Binding PickerSelectedIndex}"
                Title="{Binding PickerTitle}" />
    </VerticalStackLayout>
</ContentView>